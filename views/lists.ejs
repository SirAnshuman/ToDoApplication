<html>

<head>
    <title>To-Do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="box" id="heading">
        <h1><%=day%></h1>
    </div>
    <div class="box">
        <% for( var i = 0; i< todayTasks.length ; i++){  %>
        <form method="post" action="/delete">
            <div class="item">
                <input type="checkbox" name="remove" value="<%= todayTasks[i]._id %>" onChange="this.form.submit()">
                <p> <%= todayTasks[i].name %></p>
            </div>
            <input type="hidden" name = "listname" value="<%=day%>">
        </form>
        <%  } %>
        <form class="item" method="post" action="/">
            <input type="text" name="task" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value="<%=day%>">+</button>
        </form>
    </div>

</body>

</html>